<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/lightBackground">
    <!-- The borders of the cardView were visible after adding the layout_margin attribute -->
    <android.support.v7.widget.CardView
        android:id="@+id/listItemCardView"
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:layout_margin="8dp"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                tools:background="@color/colorAccent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sectionName"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="end"
                    android:layout_weight="0.5"
                    android:textAlignment="textEnd"
                    android:textSize="12sp"
                    tools:text="Section Name" />

                <TextView
                    android:id="@+id/headline"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:fontFamily="sans-serif-condensed"
                    android:lineSpacingMultiplier="0.8"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="Court orders Peter Dutton to transfer ill family of three from Nauru here's some more text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/author"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        tools:text="by SomeName SomeLastName" />

                    <TextView
                        android:id="@+id/dateAndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-condensed"
                        android:textAlignment="textEnd"
                        android:textSize="12sp"
                        tools:text="12:00 pm September 24, 2018" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
